<h2>注文履歴一覧</h2>


<table>
  <thead>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払い金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
  </thead>
  <tbody>
    <% @order.each do |order| %>
    　<th>
    　 <%= order.created_at.strftime('%Y/%m/%d') %></th>
    　<th><%= order.address %></th>
    　<th>
  　   <% order.order_details.each do |order_detail| %>
          <%= order_detail.item.name %>
        <% end %>
      </th>
    　<th><%= order.payment %></th>
    　<th><%= order.order_status %></th>
      <th><%= order.postage %></th>
      <th><%= link_to "表示する", public_order_path(order.id) %></th>

      <% end %>

      </tbody>
    </table>