<h2>注文履歴一覧</h2>


<table>
  <thead>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払い金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
  </thead>
  <tbody>
    　<th><%= @order.created_at %></th>
    　<th><%= @order.address %></th>
    　<th>
  　     <%= @order.order_details.each do |order_detail| %>
          <%= order_detail.item.name %>
        <% end %>
      </th>
    　<th><%= @order.payment %></th>
    　<th><%= @order.status %></th>
      <th><%= @order.postage + @total %></th>
      <th><%= link_to "表示する", public_order_path %></th>