<h1>ショッピングカート</h1>

<%= link_to "カートを空にする", public_cart_items_path,　method: :destroy_all,"data-confirm" => "本当に削除しますか?", class: "btn btn-sm btn-danger" %>

<table>
  <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
  </thead>
  <tbody>
  <% @cart_item.each do |cart_item| %>
      <tr>
        　<td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.price %></td>
          <td><%= form_with model: cart_item, url: public_cart_items_path do |f| %>
              <%= f.select :amount, *[1..10] %>
              <%= f.hidden_field :customer_id, :value => current_customer.id %>
              <%= f.hidden_field :item_id, :value => cart_item.item_id %></td>
              <%= link_to "更新", public_cart_items_path(cart_item.id) %>
              <% end %>
          <td><%= cart_item.item.price*cart_item.amount %></td>
      </tr>

  <% end %>
  </tbody>
</table>
