<div class= "row" >
  <div class= "container">
<h2>注文履歴一覧</h2>

<table class= "table">
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </tr>
  <% @order.each do |order| %>
  <tr>
  <th><%= link_to order.created_at,admin_order_path(order.id) %></th>
  <th><%= order.customer.last_name%><%= order.customer.first_name %></th>
  <th>
    <% @amount = 0 %>
    <% order.order_details.each do |order_detail| %>
    <% @amount = @amount + order_detail.amount %>
    <% end %>
    <%= @amount %>
    </th>
  <th><%= order.order_status_i18n %></th>
  </tr>
  <% end %>
</table>
</div>
</div>

