<div class= "row" >
  <div class= "container">

<h2>商品一覧</h2>

<button type="button" class="btn btn-outline-primary"><%= link_to "新規作成", new_admin_item_path %></button>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>販売ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td></td>
        <td><%= item.id %></td>
        <td>
          <%= link_to admin_item_path(item) do %>
            <span><%= item.name %></span>
          <% end %>
        </td>
        <td>
          <span><%= item.price %></span>
        </td>
        <td></td>
        <td><% if item.is_active == true %> <p>販売中</p>
          <% else %> <p>販売停止中</p>
          <% end %></td>

      </tr>
    <% end %>
  </tbody>
</table>

