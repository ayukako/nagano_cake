<h1>商品一覧</h1>

<%= link_to "新規作成", new_admin_item_path %>

<table>
  <thead>
    <tr>
      <th></th>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>販売ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td></td>
        <td><%= item.id %></td>
        <td>
          <%= link_to admin_item_path(item) do %>
            <span><%= item.name %></span>
          <% end %>
        </td>
        <td>
          <span><%= item.price %></span>
        </td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

