<h2>商品詳細</h2>

  <%= form_with model: @item, url: admin_item_path(@item.id) do |f| %>
  <%= image_tag @item.image, size: "200x200" %>
  <h4>商品名</h4>
  <p><%= @item.name %></p>
  <h4>商品説明</h4>
  <p><%= @item.introduction %></p>
  <h4>ジャンル</h4>
  <p><%= @item.genre.name %></p>
  <h4>税抜価格</h4>
  <p><%= @item.price %></p>
  <h4>販売ステータス</h4>
  <%= f.radio_button :is_active, :true %>
  <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
  <%= f.radio_button :is_active, :false %>
  <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>

  <%= f.submit '編集する' %>
  <% end %>