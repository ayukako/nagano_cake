<h2>商品新規登録</h2>

  <% if @item.errors.any? %>
  <%= @item.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

<%= form_with model: @item, url: admin_item_path(@item) do |f| %>

  <h4>商品画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>ジャンル</h4>
  <%= f.select :genre_id, options_from_collection_for_select( Genre.all, :id, :name) %>
  <h4>税抜価格</h4>
  <%= f.text_field :price %>

  <%= f.submit '新規登録' %>
<% end %>