<div class= "row" >
  <div class= "container">

<h2>会員一覧</h2>
<table class= "table">
  <thead>
    <tr>
      <th></th>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td></td>
        <td><%= customer.id %></td>
        <td>
          <%= link_to admin_customer_path(customer) do %>
            <span><%= customer.last_name %><%= customer.first_name %></span>
          <% end %>
        </td>
        <td>
          <span><%= customer.email %></span>
        </td>
        <td>
          <% if customer.is_active == true %> <p>有効</p>
          <% else %> <p>退会</p>
          <% end %>
        </td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>