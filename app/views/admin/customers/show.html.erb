<div class= "row" >
  <div class= "container">

<h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h1>

<thead>
    <ul>
      <li>会員ID<%= @customer.id %></li>
    </ul>
    <ul>
      <li>氏名<%= @customer.last_name %><%= @customer.first_name %></li>
    </ul>
    <ul>
      <li>フリガナ<%= @customer.last_name_kana %><%= @customer.first_name_kana %></li>
    </ul>
    <ul>
      <li>郵便番号<%= @customer.postal_code %></li>
    </ul>
    <ul>
      <li>住所<%= @customer.address %></li>
    </ul>
    <ul>
      <li>電話番号<%= @customer.telephone_number %></li>
    </ul>
    <ul>
      <li>メールアドレス<%= @customer.email %></li>
    </ul>
    <ul>
      <li>会員ステータス
          <% if @customer.is_active == true %> <p>有効</p>
          <% else %> <p>退会</p>
          <% end %></li>
    </ul>

  </thead>
  
</div>
</div>

